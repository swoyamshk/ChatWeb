@page
@model AuthSystem.Areas.Identity.Pages.ResetPasswordAdminModel
@{
    ViewData["Title"] = "Reset Password";
}

<h1>Reset Password</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.TemporaryPassword" class="control-label"></label>
                <input asp-for="Input.TemporaryPassword" class="form-control" />
                <span asp-validation-for="Input.TemporaryPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Input.Code" />
            <input type="hidden" asp-for="Input.Email" />

            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
