@page
@model AuthSystem.Areas.Identity.Pages.Admin.AdminDashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/Admin/adminDashboard.css" />

<div class="buttons-container mb-4">
    <button class="btn btn-primary">
        <a class="text-white" asp-page="Index">User Management</a>
    </button>
    <button class="btn btn-primary">
        <a class="text-white" asp-page="UserActivity">User Activity</a>
    </button>
</div>

<div class="row pl-4">
    <div class="col-md-3 custom-card ">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Activity Distribution</h5>
                <canvas id="userActivityChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">User Roles Distribution</h5>
                <canvas id="userRolesChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Page Visits Distribution</h5>
                <canvas id="pageVisitsChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Messages Per Day</h5>
                <canvas id="messagesPerDayChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // User Activity Chart
            var ctxActivity = document.getElementById('userActivityChart').getContext('2d');
            var userActivityChart = new Chart(ctxActivity, {
                type: 'doughnut',
                data: {
                    labels: ['Active', 'Inactive'],
                    datasets: [{
                        label: 'User Activity',
                        data: [@Model.ActiveUsers, @Model.InactiveUsers],
                        backgroundColor: ['#28a745', '#6c757d'],
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Active vs Inactive Users'
                        }
                    }
                },
            });

            // User Roles Chart
            var ctxRoles = document.getElementById('userRolesChart').getContext('2d');
            var userRolesChart = new Chart(ctxRoles, {
                type: 'doughnut',
                data: {
                    labels: ['Users', 'Managers', 'Admins'],
                    datasets: [{
                        label: 'User Roles',
                        data: [@Model.TotalUsers - @Model.TotalManagers - @Model.TotalAdmins, @Model.TotalManagers, @Model.TotalAdmins],
                        backgroundColor: ['#007bff', '#ffc107', '#dc3545'],
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Users vs Managers vs Admins'
                        }
                    }
                },
            });

            // Page Visits Chart
            var ctxPageVisits = document.getElementById('pageVisitsChart').getContext('2d');
            var pageVisitsChart = new Chart(ctxPageVisits, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.PageVisitLabels)),
                    datasets: [{
                        label: 'Page Visits',
                        data: @Html.Raw(Json.Serialize(Model.PageVisitData)),
                        backgroundColor: ['#ff6384', '#36a2eb', '#ffce56', '#4bc0c0', '#9966ff', '#ff9f40'],
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Page Visits Distribution'
                        }
                    }
                },
            });

            // Messages Per Day Chart
            var ctxMessagesPerDay = document.getElementById('messagesPerDayChart').getContext('2d');
            var messagesPerDayChart = new Chart(ctxMessagesPerDay, {
                type: 'line',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.MessageLabels)),
                    datasets: [{
                        label: 'Messages Per Day',
                        data: @Html.Raw(Json.Serialize(Model.MessageData)),
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Messages Sent Per Day'
                        }
                    },
                    scales: {
                        x: {
                            title: {
                                display: true,
                                text: 'Date'
                            }
                        },
                        y: {
                            title: {
                                display: true,
                                text: 'Number of Messages'
                            },
                            beginAtZero: true
                        }
                    }
                },
            });
        });
    </script>
}
