@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Fetch the email of the logged-in user
    var userEmail = User.Identity.IsAuthenticated ? User.Identity.Name : "Guest";
}

<link rel="stylesheet" href="~/css/Chat/userChat.css" />

<div class="container chat-container">
    <h2>Chat Room</h2>

    <div class="chat-content-container">
        <div class="chat-content">
            <div class="chat-box">
                <ul id="messagesList" class="list-group"></ul>
            </div>

            <div class="chat-input">
                <div class="row">
                    <div class="col-1">Message</div>
                    <div class="col-5">
                        <input type="text" class="form-control w-100" id="messageInput" placeholder="Type your message here..." />
                    </div>
                    <div class="col-6 text-end">
                        <input type="button" class="btn btn-primary" id="sendButton" value="Send Message" onclick="sendMessage()" />
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a class="btn btn-success" asp-area="Identity" asp-page="/Chat/CreateChatRoom">
                    Create Chat Room
                </a>
                <a class="btn btn-success" asp-area="Identity" asp-page="/Chat/ChatRooms">
                    View Chat Room
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        async function sendMessage() {
            const message = document.getElementById("messageInput").value;

            if (message) {
                const messageObj = { userName: "@userEmail", text: message };

                const response = await fetch('/api/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(messageObj)
                });

                if (response.ok) {
                    const savedMessage = await response.json();
                    appendMessageToList(savedMessage);
                    document.getElementById("messageInput").value = ""; // Clear input field
                } else {
                    console.error('Failed to send message');
                }
            }
        }

        async function loadMessages() {
            const response = await fetch('/api/messages');
            if (response.ok) {
                const messages = await response.json();
                messages.forEach(messageObj => appendMessageToList(messageObj));
            } else {
                console.error('Failed to load messages');
            }
        }

        function appendMessageToList(messageObj) {
            const messagesList = document.getElementById("messagesList");
            const li = document.createElement("li");
            li.className = "list-group-item";

            // Check if the message is sent by the current user
            if (messageObj.userName === "@userEmail") {
                const messageContent = `
                            <div class="message">${messageObj.text}</div>
                            <div class="date">${new Date(messageObj.timestamp).toLocaleString()}</div>
                        `;
                li.classList.add("sent");
                li.innerHTML = messageContent;
            } else {
                const messageContent = `
                            <div class="username">${messageObj.userName}</div>
                            <div class="message">${messageObj.text}</div>
                            <div class="date">${new Date(messageObj.timestamp).toLocaleString()}</div>
                        `;
                li.classList.add("received");
                li.innerHTML = messageContent;
            }

            messagesList.appendChild(li);
        }

        window.onload = function () {
            loadMessages();
        };
    </script>
}
